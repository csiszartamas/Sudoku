<Window x:Class="Sudoku.Ranglistmenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sudoku"
        mc:Ignorable="d"
        Title="Ranglistmenu" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="myDataGrid_Easy" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,50,540,50" Width="250" RowHeaderWidth="0" CanUserResizeColumns="False" CanUserSortColumns="False" CanUserReorderColumns="False"/>
        <DataGrid x:Name="myDataGrid_Medium" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="275,50,275,50" Width="250"/>
        <DataGrid x:Name="myDataGrid_Hard" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="540,50,10,50" Width="250"/>

    </Grid>
</Window>
